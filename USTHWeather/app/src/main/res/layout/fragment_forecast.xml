<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"

    android:layout_marginLeft="15dp"


    android:orientation="vertical"
    android:background="#E3E3F3"
    tools:context=".ForecastFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:text="@string/Thu"
            android:layout_marginLeft="10dp"
            android:gravity="top|left"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="Hanoi"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:textSize="20sp"
            android:text="@string/partly_cloudy"
            android:textColor="@color/black"
            android:textStyle="bold"/>


    </FrameLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">
        >
        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:text="@string/Mon"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/partly_cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="@string/partly_cloudy"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:text="@string/Tue"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/rainy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/showers_n24c_31c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">>

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:text="@string/Wed"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/rainy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/rain_n22c_23c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">>

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/Thu" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/scattered_showers_n22c_27c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">>

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/Fri" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/partly_cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/mostly_cloudy_n22c_30c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal">


        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/Sat" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/partly_cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/partly_cloudy_n24c_31c"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <ImageButton
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/Sun" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/thunderstorm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="@string/thunderstorms_n25c_28c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1aebf1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="@string/Mon"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/scattered_thunderstorms_n24c_27c"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1aebf1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/Tue" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/rainy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="@string/showers_n24c_26c"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#1aebf1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="@string/Wed"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/cloudy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/scattered_thunderstorms_n23c_27c"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>






</LinearLayout>